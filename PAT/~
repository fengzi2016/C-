# include <iostream>
# include <algorithm>
# include <string>
using namespace std;
int main() {
    string p;
    cin>>p;
    int n;
    cin>>n;
    int i,j,k;
    int pos,len;
    string temp,re;
    for(i = 0;i < n;i++) {
        cin>>pos;
        cin>>len;
        temp = p.substr(pos,len);
        k = 0;
        for(j = len-1 ;j>=0;j--) {
            re[k++] = temp[j];
        }
       cout<< p.substr(pos+len-1)<<endl;
       p = p.substr(0,pos)+re+p.substr(pos+len-1);
    }
    cout<<p;
    return 0;
}
